<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="?android:attr/selectableItemBackground"
    android:padding="2dp">

    <ImageView android:id="@+id/trailerThumbImgV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/trailerNameTxtV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/trailerThumbImgV"
        android:layout_alignLeft="@id/trailerThumbImgV"
        android:layout_alignRight="@id/trailerThumbImgV"
        android:ellipsize="end"
        android:fadingEdge="horizontal"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#99000000"
        android:padding="16dp" />
</RelativeLayout>